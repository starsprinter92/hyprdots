// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 55, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 10, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "custom/launcher",
        "cpu",
        "hyprland/workspaces",
        "custom/splash"
    ],
    "modules-center": [
        "custom/lock",
        "clock",
        "custom/expo"
    ],
    "modules-right": [
        "hyprland/window",
        "wlr/taskbar",
        "custom/scrot",
        "custom/music",
        "memory",
        "pulseaudio",
        "custom/nc",
        "custom/power"
    ],
    "custom/expand":{
        "on-click":"~/.config/waybar/scripts/expand_toolbar",
        "format":"{}",
        "exec":"~/.config/waybar/scripts/tools/expand arrow-icon"
    },
       "custom/power": {
        "format": "{}",
        "tooltip": true,
        "exec": "echo '{\"text\":\" ‚èª \",\"tooltip\":\"Power Menu\"}'",
        "return-type": "json",
        "on-click": "sleep 0.15 && wlogout",
        // "on-click": "pkill wofi || wofi --show drun -n",
        // "on-click-right": "pkill wofi || wofi --show run -n",
    },
         "custom/splash": {
        "format": "{}",
        "tooltip": false,
        "exec": "hyprctl splash",
    },
       "custom/lock": {
        "format": "{}",
        "tooltip": true,
        "exec": "echo '{\"text\":\" ÔÄ£ \",\"tooltip\":\"Hyprlock lock screen\"}'",
        "return-type": "json",
        "on-click": "sleep 0.15 && hyprlock",
        // "on-click": "pkill wofi || wofi --show drun -n",
        // "on-click-right": "pkill wofi || wofi --show run -n",
    },
        "custom/nc": {
        "format": "{}",
        "tooltip": true,
        "exec": "echo '{\"text\":\" Ôâ∫ \",\"tooltip\":\"SwayNC\"}'",
        "return-type": "json",
        "on-click": "sleep 0.15 && swaync-client -t -sw",
        // "on-click": "pkill wofi || wofi --show drun -n",
        // "on-click-right": "pkill wofi || wofi --show run -n",
    },
       "custom/launcher": {
        "format": "{}",
        "tooltip": true,
        "exec": "echo '{\"text\":\"Û∞£á\",\"tooltip\":\"Drun\"}'",
        "return-type": "json",
        "on-click": "echo 'pkill wofi || wofi' |sh",
        // "on-click": "pkill wofi || wofi --show drun -n",
        // "on-click-right": "pkill wofi || wofi --show run -n",
    },
        "custom/expo": {
        "format": "{}",
        "tooltip": true,
        "exec": "echo '{\"text\":\"Û∞ï∞\",\"tooltip\":\"Expo\"}'",
        "return-type": "json",
        "on-click": "sleep 0.15 && hyprctl dispatch hyprexpo:expo toggle",
        // "on-click": "pkill wofi || wofi --show drun -n",
        // "on-click-right": "pkill wofi || wofi --show run -n",
    },
        "custom/scrot": {
        "format": "{}",
        "tooltip": true,
        "exec": "echo '{\"text\":\"ÔÄ∞\",\"tooltip\":\"Screenshot\"}'",
        "return-type": "json",
        "on-click": "grim - |wl-copy && notify-send 'Screenshot copied to clipboard' -a 'ss'",
        // "on-click": "pkill wofi || wofi --show drun -n",
        // "on-click-right": "pkill wofi || wofi --show run -n",
    },
 
    "margin-right": 10,
    "margin-left": 10,
    "margin-top": 10,
    "margin-bottom": 0,
    // Modules configuration
     "hyprland/workspaces": {
